root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# views
[*.html]
indent_style = space
indent_size = 2

# scripts
[*.js]
indent_style = space
indent_size = 2

# styles
[*.css]
indent_style = space
indent_size = 2

# data
[*.json]
indent_style = space
indent_size = 2

# docs
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# configs
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# vectors
[*.svg]
indent_style = space
indent_size = 2

# binary
[*.{webp,avif,png,jpg,jpeg,gif,ico}]
insert_final_newline = false
trim_trailing_whitespace = false

# includes
[package.json]
indent_style = space
indent_size = 2

# webmanifest
[manifest.json]
indent_style = space
indent_size = 2

# lockfile
[package-lock.json]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

# shellscripts
[*.sh]
end_of_line = lf
