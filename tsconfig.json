{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "allowUnreachableCode": false,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "baseUrl": ".",
    "checkJs": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "shared/types",
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "isolatedDeclarations": false,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleDetection": "auto",
    "moduleResolution": "Node",
    "outDir": "dist",
    "paths": {
      "func/*": ["services/*"],
      "l18n/*": ["locales/*"],
      "misc/*": ["shared/*"],
      "temp/*": [".stored/*"],
      "type/*": ["misc/types/*"],
      "util/*": ["utils/*"],
      "view/*": ["views/*"]
    },
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDirs": ["views", "shared", "utils", "services"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2018",
    "typeRoots": ["node_modules/@types", "shared/types", "**/*.d.ts"],
    "types": ["node"],
    "useDefineForClassFields": true
  },
  "exclude": ["**/*.spec.js", "**/*.test.js", "**/*"],
  "files": ["manifest.json", "package.json", "tsconfig.json"],
  "include": [".stored/css", "views", "shared", "utils", "services"]
}
