{
  "manifest_version": 3,
  "name": "Compare Release: Jira vs GitLab",
  "version": "1.0",
  "description": "Provides a consolidated summary and overview of releases by integrating Jira and GitLab data.",
  "minimum_chrome_version": "114",
  "icons": {
    "16": "icons/16.icon.png",
    "48": "icons/48.icon.png",
    "128": "icons/128.icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.icon.png",
      "48": "icons/48.icon.png",
      "128": "icons/128.icon.png"
    }
  },
  "side_panel": {
    "default_path": "view/extension.html"
  },
  "background": {
    "service_worker": "services/background.js"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*",
    "https://jira.dell.com/*",
    "https://gitlab.com/*",
    "https://gitlab.dell.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "options_page": "user/settings.html",
  "web_accessible_resources": [
    {
      "resources": ["common/styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
